algoritmo "exercicio 01"
var
   nome: caractere
  anoAtual, anoNascimento, idade: Inteiro
inicio
      Escreva("Me diga seu nome? ")
      Leia(nome)
      Escreva("Em que anos estamos atualmente? ")
      Leia(anoAtual)
      Escreva("Em que ano você nasceu? ")
      Leia(anoNascimento)

      idade <- AnoAtual - anoNascimento
      Escreva(nome, " você tem ", idade, " anos!")
fimalgoritmo